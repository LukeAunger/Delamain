@page
@model Delamain_backend.Pages.Account.LoginModel
@*@{ Layout = null; }*@
@{ }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Delamain_backend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Delamain_backend.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container border" style="padding:20px">
        <form method="post">
            <div class="form-group row">
                <div class="col-5">
                    <input name="Email" type="text" placeholder="Enter your Email" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <input name="Password" type="password" placeholder="Enter your password" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <button class="btn btn-primary" name="loginbutton" type="submit" value="Login">Login</button>
                </div>
            </div>
        </form>
        <a class="btn btn-link" asp-page="/Account/Register">Apply for an Account! </a>
        <a class="btn btn-link" asp-page="/Account/ForgotPassword">Forgot Password</a>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
